#!/usr/bin/env bash
set -euo pipefail

# vault-status - show mount status for gocryptfs vault

VAULT_DIR="${VAULT_DIR:-$HOME/Vault}"
ENCRYPTED_DIR="${ENCRYPTED_DIR:-$HOME/Vault.encrypted}"

if mountpoint -q "$VAULT_DIR"; then
  echo "âœ… Vault is mounted"
  echo "ðŸ”“ Decrypted path : $VAULT_DIR"
  echo "ðŸ”’ Encrypted path : $ENCRYPTED_DIR"
else
  echo "ðŸ”’ Vault is not mounted"
  echo "ðŸ’¾ Encrypted data : $ENCRYPTED_DIR"
fi
